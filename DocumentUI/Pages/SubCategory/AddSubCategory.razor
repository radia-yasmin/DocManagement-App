@page "/SubCategory/AddSubCategory"
@using System.Text.Json
@inject HttpClient httpClient
@inject NavigationManager navigationManager

<h3>Create SubCategory</h3>


<form @onsubmit="CreateSubCategory">
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <label for="categoryName">Subcategory Name:</label>
                <input id="categoryName" class="form-control" @bind="@model.Name" required />
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label for="categoryName">Category</label>
                <select class="form-control" required @bind="@model.CategoryId">
                    <option value="" selected>Please select..</option>
                    @foreach (var item in categories)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-12">
            <div class="form-group">
                <button type="submit" class="btn btn-primary mt-2">Create Category</button>
            </div>
        </div>
    </div>

    <!-- Add other form fields as needed -->

</form>

@if (isCategoryCreated)
{
    <p>Category created successfully!</p>
}

@code {
    private bool isCategoryCreated;
    private List<Category> categories;
    private SubCategory model = new SubCategory();

    protected override async Task OnInitializedAsync()
    {
        // Replace the URL with your API endpoint
        var apiUrl = "https://localhost:44334/api/Category/GetCategories";

        // Make the HTTP request
        categories = await httpClient.GetFromJsonAsync<List<Category>>(apiUrl);
    }

    private async Task CreateSubCategory()
    {
        var apiUrl = "https://localhost:44334/api/SubCategory";

        var content = new StringContent(JsonSerializer.Serialize(model), System.Text.Encoding.UTF8, "application/json");

        var response = await httpClient.PostAsync(apiUrl, content);

        if (response.IsSuccessStatusCode)
        {
            navigationManager.NavigateTo("/SubCategory/SubCategories");
        }
        else
        {
            // Handle the error, log, or display an error message
            isCategoryCreated = false;
        }
    }

    public class Category
    {
        public int Id { get; set; }
        public string Name { get; set; }
    }

    public class SubCategory
    {
        public string Name { get; set; }
        public int CategoryId { get; set; }
    }
}
